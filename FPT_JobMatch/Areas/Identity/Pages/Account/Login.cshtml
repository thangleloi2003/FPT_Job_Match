@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container-login100";">
    <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
        <form id="account" method="post" class="login100-form validate-form flex-sb flex-w">
            <span class="login100-form-title p-b-53">
                @ViewData["Title"]
            </span>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="p-t-31 p-b-9">
                <span class="txt1">Email</span>
            </div>
            <div class="wrap-input100 validate-input" data-validate="Email is required">
                <input class="input100" asp-for="Input.Email" placeholder="Enter your email" />
                <span class="focus-input100"></span>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="p-t-13 p-b-9">
                <span class="txt1">Password</span>
                <a asp-page="./ForgotPassword" class="txt2 bo1 m-l-5">Forgot?</a>
            </div>
            <div class="wrap-input100 validate-input" data-validate="Password is required">
                <input class="input100" asp-for="Input.Password" type="password" placeholder="Enter your password" />
                <span class="focus-input100"></span>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check p-t-13 p-b-9">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label txt1">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <div class="container-login100-form-btn m-t-17">
                <button type="submit" class="login100-form-btn">Sign In</button>
            </div>

            <div class="w-full text-center p-t-55">
                <span class="txt2">Not a member?</span>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="txt2 bo1">Sign up now</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
/* Base Styles */
    body, html {
        height: 100vh;
        font-family: 'Poppins', sans-serif; /* Ensure you import the font in your HTML */
        background-image: url(https://png.pngtree.com/thumb_back/fh260/background/20230408/pngtree-rainbow-curves-abstract-colorful-background-image_2164067.jpg);
        background-repeat: no-repeat; /* Prevents the image from repeating */
        background-size: cover; /* Ensures the image covers the entire viewport */
        background-position: center; /* Centers the image in the viewport */
    }


/* Container */
.container-login100 {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

    .wrap-login100 {
        width: 100%;
        max-width: 658px; 
        background-color: #fff;
        border-radius: 20px; 
        padding: 80px 30px; 
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s; 
    }

    .login100-form {
        width: 100%;
    }

    .login100-form-title {
        width: 100%;
        display: block;
        font-family: Montserrat-Medium;
        font-size: 39px;
        color: #555555;
        line-height: 1.2;
        text-align: center;
        font-weight: bold; 
        text-align: center;
    }

    .input100 {
        width: 100%;
        border: none;
        padding: 15px;
        font-size: 16px;
        border-radius: 10px;
        background-color: #f0f0f0;
        margin-bottom: 20px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease; /* Added box-shadow transition */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

        .input100:focus {
            background-color: #e0e0e0;
            border: 2px solid #a64bf4;
            box-shadow: 0 0 5px rgba(252, 0, 255, 0.5);
            outline: none;
        }


    /* Button */
    .container-login100-form-btn {
        width: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        flex-wrap: wrap;
    }

    .login100-form-btn {
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 20px;
        width: 100%;
        height: 60px;
        background-color: #333333;
        border-radius: 10px;
        font-size: 16px;
        color: #fff;
        line-height: 1.2;
        -webkit-transition: all 0.4s;
        -o-transition: all 0.4s;
        -moz-transition: all 0.4s;
        transition: all 0.4s;
        position: relative;
        z-index: 1;
    }

        .login100-form-btn::before {
            content: "";
            display: block;
            position: absolute;
            z-index: -1;
            width: 100%;
            height: 100%;
            border-radius: 10px;
            top: 0;
            left: 0;
            background: #a64bf4;
            background: -webkit-linear-gradient(45deg, #00dbde, #fc00ff);
            background: -o-linear-gradient(45deg, #00dbde, #fc00ff);
            background: -moz-linear-gradient(45deg, #00dbde, #fc00ff);
            background: linear-gradient(45deg, #00dbde, #fc00ff);
            opacity: 0;
            -webkit-transition: all 0.4s;
            -o-transition: all 0.4s;
            -moz-transition: all 0.4s;
            transition: all 0.4s;
        }

        .login100-form-btn:hover:before {
            opacity: 1;
        }


    .txt1 {
        color: #555555;
        line-height: 1.5;
        font-size: 16px;
    }

    .txt2 {
        color: #999999;
        line-height: 1.5;
        font-size: 14px;
    }

    .bo1 {
        border-bottom: 1px solid #999999;
    }

    a {
        line-height: 1.7;
        color: #666666;
        margin: 0px;
        transition: all 0.4s;
        -webkit-transition: all 0.4s;
        -o-transition: all 0.4s;
        -moz-transition: all 0.4s;
    }

        a:focus {
            outline: none !important;
        }

        a:hover {
            text-decoration: none;
            color: #fc00ff;
            border-color: #fc00ff;
        }

    /* Add margin to labels */
    .p-t-31.p-b-9 {
        margin-bottom: 10px; /* Add space below the email label */
    }

    .p-t-13.p-b-9 {
        margin-bottom: 10px; /* Add space below the password label */
    }

    /* Adjust the spacing of the input fields */
    .wrap-input100 {
        margin-bottom: 10px; /* Increase space below input fields */
    }

    .w-full.text-center.p-t-55 {
        transform: translateY(55px);
    }

</style>
