@model FPT_JobMatch.Models.Job

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-body p-5">
                    <!-- Title -->
                    <div class="text-center mb-4">
                        <h2 class="text-danger display-6">Are you sure you want to delete this job?</h2>
                        <p class="text-muted">This action cannot be undone.</p>
                        <hr />
                    </div>

                    <!-- Job Details -->
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Job Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3 fw-bold">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3 fw-bold">Salary</dt>
                        <dd class="col-sm-9">$@Html.DisplayFor(model => model.Salary)</dd>

                        <dt class="col-sm-3 fw-bold">Posted Date</dt>
                        <dd class="col-sm-9">@Model.PostedDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-3 fw-bold">Employer</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Employer.Name)</dd>
                    </dl>

                    <!-- Action Buttons -->
                    <div class="text-center mt-5">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger btn-custom" onclick="return confirm('Are you sure you want to delete this job?');">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-custom">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-weight: 700;
        color: #dc3545; /* Red for danger */
    }

    dl dt {
        color: #343a40; /* Dark text color */
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-custom{
        padding: 15px;
        font-size: 14px;
        width: 150px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        margin-right: 10px;
    }
</style>
