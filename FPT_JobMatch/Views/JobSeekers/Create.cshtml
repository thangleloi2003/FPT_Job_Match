@model FPT_JobMatch.Models.JobSeeker

@{
    ViewData["Title"] = "Create JobSeeker";
}

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4">Add New Profile JobSeeker</h1>
    <h4 class="text-center">JobSeeker Details</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data" class="bg-light p-4 rounded shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter jobseeker's name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" placeholder="Enter jobseeker's age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" placeholder="Enter jobseeker's gender" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" type="file" class="form-control-file" accept="image/*" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Add" class="btn btn-primary btn-custom btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-custom">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control {
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 5px rgba(0, 86, 179, 0.5);
        }

    .form-control-file {
        border: 1px solid #ced4da;
        padding: 10px;
        border-radius: 5px;
        width: 100%;
    }

    .btn-custom {
        padding: 15px; /* Adjusted padding */
        font-size: 14px; /* Font size */
        width: 150px; /* Fixed width for buttons */
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-primary {
        transform: translateY(10px);
    }

        .btn-primary.btn-custom:hover {
            background-color: #0056b3;
        }

    .btn-secondary.btn-custom:hover {
        background-color: #6c757d;
    }

    .btn-primary.btn-custom:hover {
        background-color: #0056b3;
    }

    .btn-secondary.btn-custom:hover {
        background-color: #6c757d;
    }

    .bg-light {
        background-color: #f8f9fa !important;
        border: 1px solid #e0e0e0;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }

    .rounded {
        border-radius: 0.25rem !important;
    }
</style>
